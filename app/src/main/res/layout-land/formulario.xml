<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/asdasdasd">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/TxtUsuario"
        android:hint="Nombre de Usuario"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/TxtContrasena" />
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/TxtContrasena"
        android:hint="ContraseÃ±a"
        android:layout_marginTop="21dp"
        android:layout_below="@+id/TxtUsuario"
        android:layout_alignStart="@+id/BtnIngresar" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/BtnIngresar"
        android:text="Ingresar"
        android:layout_centerVertical="true"
        android:layout_alignStart="@+id/BtnNuevo" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/BtnNuevo"
        android:text="Nuevo Usuario"
        android:layout_marginStart="10dp"
        android:layout_below="@+id/BtnIngresar"
        android:layout_toEndOf="@+id/txtError"
        android:layout_marginTop="23dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtError"/>
</RelativeLayout>